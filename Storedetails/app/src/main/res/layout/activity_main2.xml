<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="2300px"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.vengithiyagarajan.storedetails.Main2Activity"
    android:background="@drawable/bg13">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="NAME :"
        android:id="@+id/textView2"
        android:textColor="#c4ffffff"
        android:focusableInTouchMode="true"
        android:textStyle="normal|italic"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="AADHAR CARD NO :"
        android:id="@+id/textView3"
        android:textColor="#c4ffffff"
        android:layout_marginTop="29dp"
        android:textStyle="normal|italic"
        android:layout_below="@+id/editText_name"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="RATION CARD NO :"
        android:id="@+id/textView4"
        android:inputType="number"
        android:textColor="#c4ffffff"
        android:layout_marginTop="25dp"
        android:textStyle="normal|italic"
        android:layout_below="@+id/editText_aadhar"
        android:layout_alignRight="@+id/textView3"
        android:layout_alignEnd="@+id/textView3" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="130px"
        android:id="@+id/editText_name"
        android:hint=" Name in capital : "
        android:inputType="textCapCharacters"
        android:drawableLeft="@drawable/ic_action_name"
        android:textStyle="normal"
        android:background="@drawable/trial"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="130px"
        android:id="@+id/editText_aadhar"
        android:hint=" Enter 12 digit number : "
        android:drawableLeft="@drawable/ic_action_name"
        android:inputType="number"
        android:ems="10"
        android:maxLength="12"
        android:background="@drawable/trial"
        android:textStyle="normal"
        android:layout_below="@+id/textView3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="130px"
        android:id="@+id/editText_rationcard"
        android:maxLength="10"
        android:hint=" Enter 10 digit number : "
        android:drawableLeft="@drawable/ic_action_name"
        android:inputType="text"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="normal"
        android:background="@drawable/trial" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="STORE"
        android:textColor="#f9f5f5"
        android:id="@+id/button_add"
        android:background="@drawable/button"
        android:layout_marginTop="38dp"
        android:textStyle="normal|italic"
        android:layout_below="@+id/editText_bankno"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/textView6"
        android:layout_toLeftOf="@+id/textView6" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="VIEW ID"
        android:id="@+id/button_view"
        android:background="@drawable/button"
        android:textStyle="italic"
        android:textColor="#f9f5f5"
        android:layout_below="@+id/editText_id"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="49dp"
        android:layout_alignLeft="@+id/btn_view"
        android:layout_alignStart="@+id/btn_view" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:text="EXIT"
        android:id="@+id/btn_exit"
        android:textColor="#f9f5f5"
        android:textStyle="italic"
        android:layout_alignTop="@+id/button_delete"
        android:layout_toStartOf="@+id/textView6"
        android:layout_toLeftOf="@+id/textView6"
        android:onClick="clickExit"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UPDATE"
        android:id="@+id/button_update"
        android:background="@drawable/button"
        android:textStyle="italic"
        android:textColor="#f9f5f5"
        android:layout_above="@+id/textView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="ENTER SAVED ID NUMBER :"
        android:id="@+id/textView"
        android:textColor="#c4ffffff"
        android:textStyle="normal|italic"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/button_add"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="550px"
        android:layout_height="130px"
        android:id="@+id/editText_id"
        android:autoText="false"
        android:hint=" Enter ID to Delete &amp; Update : "
        android:inputType="text"
        android:drawableLeft="@drawable/ic_action_name"
        android:background="@drawable/trial"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textStyle="normal" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DELETE"
        android:id="@+id/button_delete"
        android:textStyle="italic"
        android:background="@drawable/button"
        android:focusableInTouchMode="true"
        android:textColor="#f9f5f5"
        android:layout_alignTop="@+id/button_view"
        android:layout_alignRight="@+id/button_update"
        android:layout_alignEnd="@+id/button_update"
        android:layout_alignLeft="@+id/button_update"
        android:layout_alignStart="@+id/button_update" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VIEW"
        android:id="@+id/btn_view"
        android:background="@drawable/button"
        android:textStyle="italic"
        android:textColor="#f9f5f5"
        android:layout_alignTop="@+id/button_update"
        android:layout_toRightOf="@+id/textView6"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="PAN  CARD NO :"
        android:id="@+id/textView6"
        android:layout_marginTop="25dp"
        android:textColor="#c4ffffff"
        android:textStyle="normal|italic"
        android:layout_below="@+id/editText_rationcard"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="130px"
        android:id="@+id/editText_pancard"
        android:inputType="number"
        android:maxLength="10"
        android:hint=" Enter 10 digit PanCard Number"
        android:layout_below="@+id/textView6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:drawableLeft="@drawable/ic_action_name"
        android:layout_alignParentEnd="true"
        android:textStyle="normal"
        android:background="@drawable/trial" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="BANK ACCOUNT NO :"
        android:id="@+id/textView7"
        android:layout_marginTop="30dp"
        android:textColor="#c4ffffff"
        android:textStyle="normal|italic"
        android:layout_below="@+id/editText_pancard"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="130px"
        android:id="@+id/editText_bankno"
        android:inputType="number"
        android:hint=" Enter Bank Account Number"
        android:layout_below="@+id/textView7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:drawableLeft="@drawable/ic_action_name"
        android:background="@drawable/trial"
        android:textStyle="normal" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="300px"
        android:id="@+id/imageView"
        android:src="@drawable/logostore"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/editText_name"
        android:layout_alignEnd="@+id/editText_name" />

</RelativeLayout>
</ScrollView>