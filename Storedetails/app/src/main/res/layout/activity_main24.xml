<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.vengithiyagarajan.storedetails.Main24Activity"
    android:background="@drawable/bg12">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="130px"
        android:id="@+id/editText_name"
        android:hint=" USERNAME"
        android:textColorHint="#FFFFFCFC"
        android:drawableLeft="@drawable/ic_action_username"
        android:background="@drawable/logintext"
        android:textStyle="italic"
        android:layout_marginBottom="25dp"
        android:layout_above="@+id/editText_pass"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="login"
        android:background="@drawable/loginbtn"
        android:id="@+id/button_login"
        android:textColor="#f9f5f5"
        android:textStyle="bold"

        android:layout_marginBottom="100dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="130px"
        android:inputType="textPassword"
        android:background="@drawable/logintext"
        android:ems="10"
        android:drawableLeft="@drawable/ic_action_password"
        android:hint=" PASSWORD"
        android:textColorHint="#FFFFFCFC"
        android:id="@+id/editText_pass"
        android:textStyle="italic"
        android:layout_above="@+id/button_login"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="69dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:src="@drawable/login"
        android:layout_above="@+id/editText_name"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="31dp" />


</RelativeLayout>
